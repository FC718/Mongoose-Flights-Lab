<%- include('../partials/header')%>

  <section id="show-page">
    <table>
      <thead>
        <tr>
          <th>Airline: </th>
          <th>Airport: </th>
          <th>FlightNo: </th>
          <th>Departs: </th>
        </tr>
      </thead>
      <tbody>
        <td>
          <%= flight.airline %>
        </td>
        <td>
          <%= flight.airport %>
        </td>
        <td>
          <%= flight.flightNo %>
        </td>
        <td>
          <%= flight.departs %>
        </td>
      </tbody>
    </table>
  </section>

  <form action="/flights/<%= flight._id%>/destinations" method="POST">
    <label>Airport</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
    </select>

    <label>Arrival</label>
    <input type="datetime-local" name="arrival">
    <br>
    <button type="submit" value="Add Destination">Add Destination</button>
  </form>

  <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td>
              <%= d.airport %>
            </td>
            <td>
              <%= d.arrival %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <% } else { %>
      <h5>No destinations Yet</h5>
      <% } %>
        <% if (tickets.length) { %>
          <table>
            <thead>
              <tr>
                <th>Seat</th>
                <th>price</th>
              </tr>
            </thead>
            <tbody>
              <% tickets.forEach(function(t) { %>
                <tr>
                  <td>
                    <%= t.seat %>
                  </td>
                  <td>
                    <%= t.price %>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
          <% } else { %>
            <h5>No destinations Yet</h5>
            <% } %>
            <a href="/flights/<%= flight._id%>/tickets/new"><button>New Ticket</button></a>
              <%- include('../partials/footer')%>